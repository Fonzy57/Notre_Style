{% extends 'base.html.twig' %}

{% block title %}Rendez vous{% endblock %}

{% block body %}
<div class="top container">

    <h1>Rendez-vous de {{ appointment.user.firstname }} {{ appointment.user.lastname }}</h1>

    <table class="table">
        <tbody>
            {# <tr>
                <th>Id</th>
                <td>{{ appointment.id }}</td>
            </tr> #}
            <tr>
                <th>Heure de RDV</th>
                <td>{{ appointment.beginAt ? appointment.beginAt|date('d-m-Y H:i') : '' }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ appointment.user.lastname ? appointment.user.lastname : '' }}</td>
            </tr>
            <tr>
                <th>Prénom</th>
                <td>{{ appointment.user.firstname ? appointment.user.firstname : '' }}</td>
            </tr>
            <tr>
                <th>Téléphone</th>
                <td>{{ appointment.user.phone ? appointment.user.phone : '' }}</td>
            </tr>
            <tr>
                <th>Coiffeuse</th>
                <td>{{ appointment.hairdresser }}</td>
            </tr>
            <tr>
                <th>Créé le </th>
                <td>{{ appointment.createdAt ? appointment.createdAt|date('d-m-Y H:i') : '' }}</td>
            </tr>
            <tr>
                <th>Créé par</th>
                <td>{{ appointment.createdBy }}</td>
            </tr>
            <tr>
                <th>Modifié le</th>
                <td>{{ appointment.updatedAt ? appointment.updatedAt|date('d-m-Y H:i') : '' }}</td>
            </tr>
            <tr>
                <th>Modifié par</th>
                <td>{{ appointment.updatedBy }}</td>
            </tr>
        </tbody>
    </table>

    <a class="btn btn-outline-warning" href="{{ path('appointment_edit', {'id': appointment.id}) }}">Modifier le RDV</a>

    {{ include('appointment/_delete_form.html.twig') }}
    <br>
    <a href="{{ path('appointment_index') }}">Retour à la liste des RDV</a>
    
</div>
{% endblock %}
