{% block body %}
<div class="top container">

    <h1>Utilisateur {{ user.lastname }} {{ user.firstname }}</h1>

    <table class="table">
        <tbody>
            {# <tr>
                <th>Id</th>
                <td>{{ user.id }}</td>
